// ==================== Sequence ====================

sequence( r A1  CUAUUACGAGAGGACCG )
//              ...((..))(.(...))

// ==================== Relations ====================
relation
(
A1:  A4 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/2_2/UUGA/*.pdb.gz" )
    #1:#2, #3:#4 <- A4:A5, A8:A9
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/4/UACG/*.pdb.gz" )
    #1:#4 <- A5:A8
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
lnk_01 = library(
    pdb( "DB/ss2/AG/*.pdb.gz" )
    #1:#2 <- A9:A10
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
//----- Fragment 3 -----
ncm_03 = library(
    pdb( "DB/3_2/GAGCG/*.pdb.gz" )
    #1:#3, #4:#5 <- A10:A12, A16:A17
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/5/GGACC/*.pdb.gz" )
    #1:#5 <- A12:A16
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( ncm_02  1.5 )
    merge( lnk_01  1.5 )
    merge( ncm_03  1.5 )
    merge( ncm_04  1.5 )
    //------ dangling ends --------
    (  A4  A3  A2  A1  )
)

// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000000571" zipped )
)
