(
A1:  A12 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/2_2/CGCG/*.pdb.gz" )
    #1:#2, #3:#4 <- A12:A13, A16:A17
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
