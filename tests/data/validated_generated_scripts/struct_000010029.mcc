// ==================== Sequence ====================

sequence( r A1  CUAGUAUGAGACGACCG )
//              .....(((((..)))))

// ==================== Relations ====================
relation
(
A1:  A6 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/2_2/AUCG/*.pdb.gz" )
    #1:#2, #3:#4 <- A6:A7, A16:A17
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/2_2/UGCC/*.pdb.gz" )
    #1:#2, #3:#4 <- A7:A8, A15:A16
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_2/GAAC/*.pdb.gz" )
    #1:#2, #3:#4 <- A8:A9, A14:A15
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/2_2/AGGA/*.pdb.gz" )
    #1:#2, #3:#4 <- A9:A10, A13:A14
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_05 = library(
    pdb( "DB/4/GACG/*.pdb.gz" )
    #1:#4 <- A10:A13
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( ncm_02  1.5 )
    merge( ncm_03  1.5 )
    merge( ncm_04  1.5 )
    merge( ncm_05  1.5 )
    //------ dangling ends --------
    (  A6  A5  A4  A3  A2  A1  )
)

// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000010029" zipped )
)
