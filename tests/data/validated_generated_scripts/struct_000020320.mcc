// ==================== Sequence ====================

sequence( r A1  CUAGUAGGAGACGACCG )
//              (..((((...)).)).)

// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/4_3/CUAGCCG/*.pdb.gz" )
    #1:#4, #5:#7 <- A1:A4, A15:A17
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/2_2/GUAC/*.pdb.gz" )
    #1:#2, #3:#4 <- A4:A5, A14:A15
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_3/UACGA/*.pdb.gz" )
    #1:#2, #3:#5 <- A5:A6, A12:A14
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/2_2/AGAC/*.pdb.gz" )
    #1:#2, #3:#4 <- A6:A7, A11:A12
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_05 = library(
    pdb( "DB/5/GGAGA/*.pdb.gz" )
    #1:#5 <- A7:A11
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( ncm_02  1.5 )
    merge( ncm_03  1.5 )
    merge( ncm_04  1.5 )
    merge( ncm_05  1.5 )
    //------ dangling ends --------
)

// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000020320" zipped )
)
