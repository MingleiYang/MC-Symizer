    pdb( "DB/2_2/GGCA/*.pdb.gz" )
    #1:#2, #3:#4 <- A3:A4, B5:B6
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_2/GCGC/*.pdb.gz" )
    #1:#2, #3:#4 <- A4:A5, B4:B5
