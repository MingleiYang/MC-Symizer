// ==================== Sequence ====================

sequence( r A1  CUAGUACGAGGGGACCG )
//              ..(.(((...).)))..

// ==================== Relations ====================
relation
(
A15:  A17 { file( "helixA_RNA" ) stack } 1
A1:  A3 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/3_2/AGUAC/*.pdb.gz" )
    #1:#3, #4:#5 <- A3:A5, A14:A15
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/2_2/UAGA/*.pdb.gz" )
    #1:#2, #3:#4 <- A5:A6, A13:A14
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_3/ACGGG/*.pdb.gz" )
    #1:#2, #3:#5 <- A6:A7, A11:A13
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/5/CGAGG/*.pdb.gz" )
    #1:#5 <- A7:A11
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( ncm_02  1.5 )
    merge( ncm_03  1.5 )
    merge( ncm_04  1.5 )
    //------ dangling ends --------
    (  A3  A2  A1  )
    (  A15  A16  A17  )
)

// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000033587" zipped )
)
