// ==================== Sequence ====================

sequence( r A1  GUGGCCUU )
//              (..(((((

sequence( r B1  AAGGCAC )
//              ))))).)

// ==================== Relations ====================
relation
(
A1:  A4 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/2_2/GCGC/*.pdb.gz" )
    #1:#2, #3:#4 <- A4:A5, B4:B5
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/2_2/CCGG/*.pdb.gz" )
    #1:#2, #3:#4 <- A5:A6, B3:B4
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_2/CUAG/*.pdb.gz" )
    #1:#2, #3:#4 <- A6:A7, B2:B3
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/2_2/UUAA/*.pdb.gz" )
    #1:#2, #3:#4 <- A7:A8, B1:B2
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( ncm_02  1.5 )
    merge( ncm_03  1.5 )
    merge( ncm_04  1.5 )
    //------ dangling ends --------
    (  A4  A3  A2  A1  )
)

// =================== Distance Restraints ===================
distance(  A1:C1'    B7:C1'  0.0  3.0  )
// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000036029" zipped )
)
