// ==================== Sequence ====================

sequence( r A1  GGAGUAAGU )
//              ((.(((((.

sequence( r B1  ACUUACCCG )
//              .))))))).

// ==================== Relations ====================
relation
(
B8:  B9 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/2_2/GGCC/*.pdb.gz" )
    #1:#2, #3:#4 <- A1:A2, B7:B8
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/3_2/GAGCC/*.pdb.gz" )
    #1:#3, #4:#5 <- A2:A4, B6:B7
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_2/GUAC/*.pdb.gz" )
    #1:#2, #3:#4 <- A4:A5, B5:B6
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/2_2/UAUA/*.pdb.gz" )
    #1:#2, #3:#4 <- A5:A6, B4:B5
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_05 = library(
    pdb( "DB/2_2/AAUU/*.pdb.gz" )
    #1:#2, #3:#4 <- A6:A7, B3:B4
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_06 = library(
    pdb( "DB/2_2/AGCU/*.pdb.gz" )
    #1:#2, #3:#4 <- A7:A8, B2:B3
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( ncm_02  1.5 )
    merge( ncm_03  1.5 )
    merge( ncm_04  1.5 )
    merge( ncm_05  1.5 )
    merge( ncm_06  1.5 )
    //------ dangling ends --------
    (  B8  B9  )
)

// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000050137" zipped )
)
