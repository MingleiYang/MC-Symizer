// ==================== Sequence ====================

sequence( r A1  CCUAGUACGAGAGGACCGG )
//              ((((.(((...).))))))

// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/2_2/CCGG/*.pdb.gz" )
    #1:#2, #3:#4 <- A1:A2, A18:A19
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/2_2/CUCG/*.pdb.gz" )
    #1:#2, #3:#4 <- A2:A3, A17:A18
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_2/UACC/*.pdb.gz" )
    #1:#2, #3:#4 <- A3:A4, A16:A17
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/3_2/AGUAC/*.pdb.gz" )
    #1:#3, #4:#5 <- A4:A6, A15:A16
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_05 = library(
    pdb( "DB/2_2/UAGA/*.pdb.gz" )
    #1:#2, #3:#4 <- A6:A7, A14:A15
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_06 = library(
    pdb( "DB/2_3/ACAGG/*.pdb.gz" )
    #1:#2, #3:#5 <- A7:A8, A12:A14
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_07 = library(
    pdb( "DB/5/CGAGA/*.pdb.gz" )
    #1:#5 <- A8:A12
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( ncm_02  1.5 )
    merge( ncm_03  1.5 )
    merge( ncm_04  1.5 )
    merge( ncm_05  1.5 )
    merge( ncm_06  1.5 )
    merge( ncm_07  1.5 )
    //------ dangling ends --------
)

// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000060182" zipped )
)
