// ==================== Sequence ====================

sequence( r A1  CUAGUAUGAGAUGACCG )
//              ((....)..)(.(..))

// ==================== Relations ====================
relation
(
A1:  A2 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/6/UAGUAU/*.pdb.gz" )
    #1:#6 <- A2:A7
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
lnk_01 = library(
    pdb( "DB/ss2/UG/*.pdb.gz" )
    #1:#2 <- A7:A8
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
lnk_02 = library(
    pdb( "DB/ss2/GA/*.pdb.gz" )
    #1:#2 <- A8:A9
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
lnk_03 = library(
    pdb( "DB/ss2/AG/*.pdb.gz" )
    #1:#2 <- A9:A10
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
lnk_04 = library(
    pdb( "DB/ss2/GA/*.pdb.gz" )
    #1:#2 <- A10:A11
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
//----- Fragment 3 -----
ncm_02 = library(
    pdb( "DB/3_2/AUGCG/*.pdb.gz" )
    #1:#3, #4:#5 <- A11:A13, A16:A17
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/4/GACC/*.pdb.gz" )
    #1:#4 <- A13:A16
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
// ===================== Backtrack =====================
structure = backtrack
(
    ncm_01
    merge( lnk_01  1.5 )
    merge( lnk_02  1.5 )
    merge( lnk_03  1.5 )
    merge( lnk_04  1.5 )
    merge( ncm_02  1.5 )
    merge( ncm_03  1.5 )
    //------ dangling ends --------
    (  A2  A1  )
)

// =================== Distance Restraints ===================
distance(  A1:C1'    A10:C1'  0.0  3.0  )
// =================== Backtrack Restraints ===================
clash
(
    structure
    1.5 !( pse || lp || hydrogen )
)
backtrack_rst
(
    structure
    width_limit  = 25%,
    height_limit = 33%,
    method       = probabilistic
)
// =================== Ribose Restraints ===================
ribose_rst
(
    structure
    method    = ccm,
    pucker    = C3p_endo,
    threshold = 2.0
)
// =================== Exploration Initialization =========
explore
(
    structure
    option(
    model_limit = 1000,
    time_limit  = 30m,
    seed        = 3210 )
    rmsd( 3.0 sidechain && !( pse || lp || hydrogen ) )
    pdb( "struct_000060901" zipped )
)
