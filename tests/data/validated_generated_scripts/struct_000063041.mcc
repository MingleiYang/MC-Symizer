// ==================== Sequence ====================

sequence( r A1  CCUAGUACGAGAGGACCGG )
//              .(((((.(....)))))).

// ==================== Relations ====================
relation
(
A18:  A19 { file( "helixA_RNA" ) stack } 1
A1:  A2 { file( "helixA_RNA" ) stack } 1
)
// ==================== Library ====================

//----- Fragment 1 -----
ncm_01 = library(
    pdb( "DB/2_2/CUCG/*.pdb.gz" )
    #1:#2, #3:#4 <- A2:A3, A17:A18
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_02 = library(
    pdb( "DB/2_2/UACC/*.pdb.gz" )
    #1:#2, #3:#4 <- A3:A4, A16:A17
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_03 = library(
    pdb( "DB/2_2/AGAC/*.pdb.gz" )
    #1:#2, #3:#4 <- A4:A5, A15:A16
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_04 = library(
    pdb( "DB/2_2/GUGA/*.pdb.gz" )
    #1:#2, #3:#4 <- A5:A6, A14:A15
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_05 = library(
    pdb( "DB/3_2/UACGG/*.pdb.gz" )
    #1:#3, #4:#5 <- A6:A8, A13:A14
//  rmsd( 0.5 sidechain && !( pse || lp || hydrogen ) ) 
)
ncm_06 = library(
